<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/reset.css">
    <link rel="stylesheet" href="../css/theme.css">
    <link rel="stylesheet" href="../css/login.css">
    <link rel="stylesheet" href="../assets/fontawesome-free-5.13.0-web/css/all.css">
    <!-- <script src="https://kit.fontawesome.com/edfda1e8cf.js" crossorigin="anonymous"></script> -->
    <!-- <script src="../js/navbar.js" async></script> -->
    <title>Tvastra</title>
</head>
<body>
    
    <%- include('./partials/navbar.ejs') %>
    <% if(locals.error){ %> 
        <div class="error message">
            <div class="information">
                <i class="fas fa-times-circle fa-2x"></i>
                <div class="data">
                    <h3>Failure</h3>
                    <h4><%= locals.error %> </h4>
                </div>
            </div>
            <i class="fas fa-times close" onclick="document.getElementsByClassName('message')[0].style.display = 'none';"></i>
        </div>
    <% } %> 

    <main>
        <section class="login-detail">
            <h3>Login</h3>
            <form action="/login" method="POST" class="login">
                <div class="email-div">
                    <input type="email" name='email' placeholder="Email">
                    <i class="fas fa-question-circle"></i>    
                </div>
                <input type="password" name="password" id="" placeholder="Enter OTP">
                <button>Login <span><i class="fas fa-arrow-right"></i></span></button>
            </form>
            <a href="phoneLogin">Login via OTP</a>
            <h6>Not Registered? <span><a href="signup" >Sign Up</a></span></h6>
        </section>
    </main>
    <footer>
            <div class="last-line">
                <h5>All Rights Reserved. &copy; tvastra 2018</h5>
            </div>        
    </footer>
</body>
</html>
