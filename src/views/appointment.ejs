    <%- include('./partials/navbar.ejs') %>
    <main>
        <section class="book-detail">
            <h3>Book an Appointment</h3>
            <form action="" class="book">
                <div class="book-info-and">
                    <h5>Select Appointment Date*</h5>
                    <div class="book-info">
                        <input type="date" >
                    </div>
                    
                </div>
                <div class="book-info-and">
                    <h5>Time Interval*</h5>
                    <div class="book-info">
                        <input type="radio" >
                        <label for="">Morning</label>
                    </div>
                    <div class="book-info">
                        <input type="radio" >
                        <label for="">Aftenoon</label>                        
                    </div>
                    <div class="book-info">
                        <input type="radio" >
                        <label for="">Evening</label>
                    </div>
                </div>

                <div class="book-info-and">
                    <h5>Appointment Status/ Urgency*</h5>
                    <div class="book-info">
                        <input type="radio" >
                        <label for="">Routine Checkup</label>    
                    </div>
                    <div class="book-info">
                        <input type="radio" >
                        <label for="">Non Urgent Checkup</label>    
                    </div>
                    <div class="book-info">
                        <input type="radio" >
                        <label for="">Urgent Checkup</label>    
                    </div>
                    <div class="book-info">
                        <input type="radio" >
                        <label for="">Surgical Appointment</label> 
                    </div>                                       
                </div>

                <div class="book-info-and">
                    <h5>Upload Previous Health Record</h5>
                    <div class="book-info">
                        <input type="file">
                    </div>
                    
                </div>
                <div class="book-info-and">
                    <h5>Appointment Detail</h5>
                    <div class="book-info">
                        <textarea name="" id=""  rows="4"></textarea>
                    </div>
                        
                </div>            
              
                <button>B O O K &ensp; A P P O I N T M E N T<span><i class="fas fa-arrow-right"></i></span></button>
            </form>
        </section>
    </main>
